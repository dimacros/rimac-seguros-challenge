{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "outDir": ".build",
    "preserveConstEnums": true,
    "rootDir": "./",
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
